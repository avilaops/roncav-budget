<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:behaviors="clr-namespace:Orcamento.Behaviors"
             x:Class="Orcamento.Views.Skeletons.CardSkeleton">

    <Frame CornerRadius="12" Padding="16" HasShadow="False" BackgroundColor="#F5F5F5">
        <VerticalStackLayout Spacing="12">
            <!-- Título -->
            <BoxView HeightRequest="20" WidthRequest="200" CornerRadius="4" Color="#E0E0E0">
                <BoxView.Behaviors>
                    <behaviors:SkeletonLoaderBehavior/>
                </BoxView.Behaviors>
            </BoxView>

            <!-- Subtítulo -->
            <BoxView HeightRequest="16" WidthRequest="150" CornerRadius="4" Color="#E0E0E0">
                <BoxView.Behaviors>
                    <behaviors:SkeletonLoaderBehavior/>
                </BoxView.Behaviors>
            </BoxView>

            <!-- Valor -->
            <BoxView HeightRequest="24" WidthRequest="100" CornerRadius="4" Color="#E0E0E0">
                <BoxView.Behaviors>
                    <behaviors:SkeletonLoaderBehavior/>
                </BoxView.Behaviors>
            </BoxView>
        </VerticalStackLayout>
    </Frame>
</ContentView>
