<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Orcamento.ViewModels"
             x:Class="Orcamento.Views.FilterPage"
             x:DataType="vm:FilterViewModel"
             Title="Filtros">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Período -->
            <Frame CornerRadius="12" Padding="16">
                <VerticalStackLayout Spacing="12">
                    <Label Text="📅 Período" FontSize="18" FontAttributes="Bold"/>
                    
                    <Label Text="Data Início"/>
                    <DatePicker Date="{Binding DataInicio}" Format="dd/MM/yyyy"/>
                    
                    <Label Text="Data Fim"/>
                    <DatePicker Date="{Binding DataFim}" Format="dd/MM/yyyy"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Tipo de Transação -->
            <Frame CornerRadius="12" Padding="16">
                <VerticalStackLayout Spacing="12">
                    <Label Text="💳 Tipo de Transação" FontSize="18" FontAttributes="Bold"/>
                    <Picker ItemsSource="{Binding TiposDisponiveis}"
                            SelectedItem="{Binding TipoTransacao}"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Forma de Pagamento -->
            <Frame CornerRadius="12" Padding="16">
                <VerticalStackLayout Spacing="12">
                    <Label Text="💰 Forma de Pagamento" FontSize="18" FontAttributes="Bold"/>
                    <Picker ItemsSource="{Binding FormasPagamentoDisponiveis}"
                            SelectedItem="{Binding FormaPagamento}"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Valor -->
            <Frame CornerRadius="12" Padding="16">
                <VerticalStackLayout Spacing="12">
                    <Label Text="💵 Faixa de Valor" FontSize="18" FontAttributes="Bold"/>
                    
                    <Label Text="Valor Mínimo"/>
                    <Entry Placeholder="R$ 0,00" 
                           Keyboard="Numeric"
                           Text="{Binding ValorMinimo}"/>
                    
                    <Label Text="Valor Máximo"/>
                    <Entry Placeholder="R$ 9999,00" 
                           Keyboard="Numeric"
                           Text="{Binding ValorMaximo}"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Busca por Texto -->
            <Frame CornerRadius="12" Padding="16">
                <VerticalStackLayout Spacing="12">
                    <Label Text="🔍 Buscar" FontSize="18" FontAttributes="Bold"/>
                    <Entry Placeholder="Digite para buscar..."
                           Text="{Binding TextoBusca}"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Opções -->
            <Frame CornerRadius="12" Padding="16">
                <VerticalStackLayout Spacing="12">
                    <Label Text="⚙️ Opções" FontSize="18" FontAttributes="Bold"/>
                    
                    <HorizontalStackLayout Spacing="10">
                        <Switch IsToggled="{Binding ApenasEfetivadas}"/>
                        <Label Text="Apenas efetivadas" VerticalOptions="Center"/>
                    </HorizontalStackLayout>
                    
                    <HorizontalStackLayout Spacing="10">
                        <Switch IsToggled="{Binding ApenasRecorrentes}"/>
                        <Label Text="Apenas recorrentes" VerticalOptions="Center"/>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Frame>

            <!-- Botões -->
            <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
                <Button Grid.Column="0" 
                        Text="Limpar"
                        BackgroundColor="Transparent"
                        BorderColor="{StaticResource Primary}"
                        BorderWidth="2"
                        TextColor="{StaticResource Primary}"
                        Clicked="OnLimparClicked"/>
                
                <Button Grid.Column="1" 
                        Text="Aplicar"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="White"
                        Clicked="OnAplicarClicked"/>
            </Grid>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
