<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Orcamento.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Orcamento.Views"
    xmlns:roncavviews="clr-namespace:Orcamento.Views"
    Shell.FlyoutBehavior="Flyout"
    Shell.FlyoutBackgroundColor="#FFFFFF"
    Title="Roncav Budget">

    <!-- ⌨️ Atalhos de Teclado Globais -->
    <Shell.Resources>
        <ResourceDictionary>
            <!-- KeyboardAccelerators removidos - não funcionam no Shell do .NET MAUI -->
            <!-- Use atalhos nativos da plataforma ou implemente via código -->
        </ResourceDictionary>
    </Shell.Resources>

    <Shell.FlyoutHeader>
        <Grid BackgroundColor="#007AFF"
              HeightRequest="200"
              Padding="24,40,24,24">
            <VerticalStackLayout VerticalOptions="End"
                    Spacing="8">
                <Label Text="Roncav Budget"
                       FontSize="28"
                       FontAttributes="Bold"
                       TextColor="White"/>
                <Label Text="Controle Financeiro Inteligente"
                       FontSize="15"
                       TextColor="White"
                       Opacity="0.8"/>
                
                <!-- 🔄 Indicador de Sincronização -->
                <roncavviews:SyncIndicatorView Margin="0,12,0,0"/>
            </VerticalStackLayout>
        </Grid>
    </Shell.FlyoutHeader>

    <FlyoutItem Title="Resumo">
        <ShellContent
            Title="Resumo"
            ContentTemplate="{DataTemplate roncavviews:DashboardEnhancedPage}"
            Route="Dashboard">
            <ShellContent.Icon>
                <FontImageSource Glyph="&#xE10F;"
                                 FontFamily="SegoeFluent"
                                 Color="#007AFF"/>
            </ShellContent.Icon>
        </ShellContent>
    </FlyoutItem>

    <FlyoutItem Title="Transações">
        <ShellContent
            Title="Transações"
            ContentTemplate="{DataTemplate views:TransacoesPage}"
            Route="Transacoes">
            <ShellContent.Icon>
                <FontImageSource Glyph="&#xE8C7;"
                                 FontFamily="SegoeFluent"
                                 Color="#007AFF"/>
            </ShellContent.Icon>
        </ShellContent>
    </FlyoutItem>

    <FlyoutItem Title="Contas">
        <ShellContent
            Title="Contas"
            ContentTemplate="{DataTemplate roncavviews:ContasPage}"
            Route="Contas">
            <ShellContent.Icon>
                <FontImageSource Glyph="&#xE8C7;"
                                 FontFamily="SegoeFluent"
                                 Color="#007AFF"/>
            </ShellContent.Icon>
        </ShellContent>
    </FlyoutItem>

    <FlyoutItem Title="Orçamentos">
        <ShellContent
            Title="Orçamentos"
            ContentTemplate="{DataTemplate roncavviews:OrcamentosPage}"
            Route="Orcamentos">
            <ShellContent.Icon>
                <FontImageSource Glyph="&#xE8F1;"
                                 FontFamily="SegoeFluent"
                                 Color="#007AFF"/>
            </ShellContent.Icon>
        </ShellContent>
    </FlyoutItem>

    <FlyoutItem Title="Metas">
        <ShellContent
            Title="Metas"
            ContentTemplate="{DataTemplate roncavviews:MetasPage}"
            Route="Metas">
            <ShellContent.Icon>
                <FontImageSource Glyph="&#xE8F4;"
                                 FontFamily="SegoeFluent"
                                 Color="#007AFF"/>
            </ShellContent.Icon>
        </ShellContent>
    </FlyoutItem>

    <FlyoutItem Title="Relatórios">
        <ShellContent
            Title="Relatórios"
            ContentTemplate="{DataTemplate roncavviews:RelatoriosPage}"
            Route="Relatorios">
            <ShellContent.Icon>
                <FontImageSource Glyph="&#xE9D9;"
                                 FontFamily="SegoeFluent"
                                 Color="#007AFF"/>
            </ShellContent.Icon>
        </ShellContent>
    </FlyoutItem>

    <FlyoutItem Title="Configurações">
        <ShellContent
            Title="Configurações"
            ContentTemplate="{DataTemplate roncavviews:SettingsPage}"
            Route="Configuracoes">
            <ShellContent.Icon>
                <FontImageSource Glyph="&#xE713;"
                                 FontFamily="SegoeFluent"
                                 Color="#8E8E93"/>
            </ShellContent.Icon>
        </ShellContent>
    </FlyoutItem>

    <Shell.FlyoutFooter>
        <VerticalStackLayout Padding="24,16"
                             BackgroundColor="#F2F2F7"
                             Spacing="8">
            <Label Text="Versão 1.0.0"
                   FontSize="13"
                   TextColor="#8E8E93"
                   HorizontalOptions="Center"/>
            <Label Text="Desenvolvido por Avila Ops"
                   FontSize="11"
                   TextColor="#AEAEB2"
                   HorizontalOptions="Center"/>
        </VerticalStackLayout>
    </Shell.FlyoutFooter>

</Shell>
