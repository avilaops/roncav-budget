<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Cores Principais -->
    <Color x:Key="Primary">#007AFF</Color>
    <Color x:Key="PrimaryDark">#0A84FF</Color>
    <Color x:Key="Secondary">#5AC8FA</Color>
    <Color x:Key="SecondaryDark">#64D2FF</Color>
    <Color x:Key="Tertiary">#FF9500</Color>

    <!-- Cores de Estado -->
    <Color x:Key="Success">#34C759</Color>
    <Color x:Key="Error">#FF3B30</Color>
    <Color x:Key="Warning">#FF9500</Color>
    <Color x:Key="Info">#007AFF</Color>

    <!-- Cores Neutras Light -->
    <Color x:Key="White">#FFFFFF</Color>
    <Color x:Key="Black">#000000</Color>
    <Color x:Key="Gray100">#F9F9F9</Color>
    <Color x:Key="Gray200">#E5E5EA</Color>
    <Color x:Key="Gray300">#D1D1D6</Color>
    <Color x:Key="Gray400">#C7C7CC</Color>
    <Color x:Key="Gray500">#AEAEB2</Color>
    <Color x:Key="Gray600">#8E8E93</Color>
    <Color x:Key="Gray700">#636366</Color>
    <Color x:Key="Gray800">#48484A</Color>
    <Color x:Key="Gray900">#3A3A3C</Color>
    <Color x:Key="Gray950">#2C2C2E</Color>

    <!-- Cores Dinâmicas (Light/Dark) -->
    <Color x:Key="PageBackgroundColor">#FFFFFF</Color>
    <Color x:Key="PageBackgroundColorDark">#000000</Color>

    <Color x:Key="CardBackgroundColor">#FFFFFF</Color>
    <Color x:Key="CardBackgroundColorDark">#1C1C1E</Color>

    <Color x:Key="TextPrimaryColor">#000000</Color>
    <Color x:Key="TextPrimaryColorDark">#FFFFFF</Color>

    <Color x:Key="TextSecondaryColor">#636366</Color>
    <Color x:Key="TextSecondaryColorDark">#AEAEB2</Color>

    <Color x:Key="BorderColor">#E5E5EA</Color>
    <Color x:Key="BorderColorDark">#38383A</Color>

    <Color x:Key="SeparatorColor">#C7C7CC</Color>
    <Color x:Key="SeparatorColorDark">#38383A</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource Success}"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource Error}"/>
    
    <SolidColorBrush x:Key="PageBackgroundBrush" Color="{AppThemeBinding Light=#FFFFFF, Dark=#000000}"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="{AppThemeBinding Light=#FFFFFF, Dark=#1C1C1E}"/>
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{AppThemeBinding Light=#000000, Dark=#FFFFFF}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{AppThemeBinding Light=#636366, Dark=#AEAEB2}"/>
</ResourceDictionary>