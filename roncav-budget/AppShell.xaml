<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="roncav_budget.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:roncav_budget.Views"
    Shell.FlyoutBehavior="Flyout"
    Shell.FlyoutBackgroundColor="#FFFFFF"
    Title="Roncav Budget">

    <Shell.FlyoutHeader>
        <Grid BackgroundColor="#007AFF" 
      HeightRequest="200" 
              Padding="24,40,24,24">
            <VerticalStackLayout VerticalOptions="End" Spacing="8">
         <Label Text="Roncav Budget"
       FontSize="28"
           FontAttributes="Bold"
                  TextColor="White"/>
                <Label Text="Controle Financeiro Inteligente"
        FontSize="15"
TextColor="White"
      Opacity="0.8"/>
       </VerticalStackLayout>
        </Grid>
    </Shell.FlyoutHeader>

    <FlyoutItem Title="Resumo">
      <ShellContent
 Title="Resumo"
  ContentTemplate="{DataTemplate views:DashboardPage}"
  Route="Dashboard">
        <ShellContent.Icon>
    <FontImageSource Glyph="&#xE10F;" 
  FontFamily="SegoeFluent"
        Color="#007AFF"/>
          </ShellContent.Icon>
        </ShellContent>
    </FlyoutItem>

    <FlyoutItem Title="Transacoes">
 <ShellContent
            Title="Transacoes"
            ContentTemplate="{DataTemplate views:TransacoesPage}"
 Route="Transacoes">
        <ShellContent.Icon>
    <FontImageSource Glyph="&#xE8C7;" 
            FontFamily="SegoeFluent"
         Color="#007AFF"/>
   </ShellContent.Icon>
        </ShellContent>
    </FlyoutItem>

    <FlyoutItem Title="Contas">
<ShellContent
 Title="Contas"
   ContentTemplate="{DataTemplate ContentPage}"
            Route="Contas">
            <ShellContent.Icon>
      <FontImageSource Glyph="&#xE8C7;" 
   FontFamily="SegoeFluent"
    Color="#007AFF"/>
    </ShellContent.Icon>
        </ShellContent>
    </FlyoutItem>

    <FlyoutItem Title="Orcamentos">
  <ShellContent
            Title="Orcamentos"
          ContentTemplate="{DataTemplate ContentPage}"
        Route="Orcamentos">
   <ShellContent.Icon>
    <FontImageSource Glyph="&#xE8F1;" 
  FontFamily="SegoeFluent"
      Color="#007AFF"/>
       </ShellContent.Icon>
        </ShellContent>
    </FlyoutItem>

    <FlyoutItem Title="Metas">
        <ShellContent
            Title="Metas"
    ContentTemplate="{DataTemplate ContentPage}"
   Route="Metas">
            <ShellContent.Icon>
           <FontImageSource Glyph="&#xE8F4;" 
             FontFamily="SegoeFluent"
          Color="#007AFF"/>
        </ShellContent.Icon>
  </ShellContent>
    </FlyoutItem>

    <FlyoutItem Title="Relatorios">
   <ShellContent
          Title="Relatorios"
        ContentTemplate="{DataTemplate ContentPage}"
 Route="Relatorios">
  <ShellContent.Icon>
    <FontImageSource Glyph="&#xE9D9;" 
          FontFamily="SegoeFluent"
            Color="#007AFF"/>
</ShellContent.Icon>
   </ShellContent>
    </FlyoutItem>

    <FlyoutItem Title="Configuracoes">
        <ShellContent
Title="Configuracoes"
            ContentTemplate="{DataTemplate ContentPage}"
            Route="Configuracoes">
   <ShellContent.Icon>
   <FontImageSource Glyph="&#xE713;" 
          FontFamily="SegoeFluent"
      Color="#8E8E93"/>
  </ShellContent.Icon>
        </ShellContent>
 </FlyoutItem>

    <Shell.FlyoutFooter>
    <VerticalStackLayout Padding="24,16" 
         BackgroundColor="#F2F2F7"
     Spacing="8">
<Label Text="Versao 1.0.0"
        FontSize="13"
 TextColor="#8E8E93"
         HorizontalOptions="Center"/>
     <Label Text="Desenvolvido por Avila Ops"
          FontSize="11"
          TextColor="#AEAEB2"
 HorizontalOptions="Center"/>
    </VerticalStackLayout>
    </Shell.FlyoutFooter>

</Shell>
